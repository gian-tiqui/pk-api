generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int        @id
  firstName         String
  middleName        String?
  lastName          String
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  isDeleted         Boolean    @default(false)
  refreshToken      String?    @unique
  logs              Log[]
}

model Floor {
  id                Int        @id
  name              String     @unique
  level             Int        
  code              String     @unique
  isDeleted         Boolean    @default(false)
  rooms             Room[]
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
}

model Room {
  id                Int        @id
  name              String
  code              String     @unique
  floorId           Int
  floor             Floor      @relation(fields: [floorId], references: [id])
  isDeleted         Boolean    @default(false)
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
}

model Log {
  id                Int        @id
  userId            Int        
  user              User       @relation(fields: [userId], references: [id])
  log               Json
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
}